  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@shubox/*"
  ],
  "devDependencies": {
    "@types/webpack-env": "^1.13.5",
    "lerna": "^2.9.1",
    "rimraf": "^2.6.2",
    "ts-loader": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "webpack": "^4.3.0",
    "webpack-cli": "^2.0.13"
  }
}
