{
  "name": "shubox.js",
  "version": "1.0.0",
  "description": "Shubox javascript SDK",
  "main": "index.js",
  "author": "joel@shubox.io",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist packages/**/dist",
    "compile": "tsc",
    "predist": "yarn compile",
    "dev": "webpack --mode development",
